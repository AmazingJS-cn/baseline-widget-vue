{
    "name": "baseline-widget-vue",
    "version": "0.1.1",
    "private": false,
    "type": "module",
    "files": [
        "dist",
        "src/"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AmazingJS-cn/baseline-widget-vue.git"
    },
    "keywords": [
        "baseline",
        "baseline2024",
        "vue3",
        "vue",
        "vuejs"
    ],
    "main": "./dist/baseline-widget-vue.umd.cjs",
    "module": "./dist/baseline-widget-vue.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/baseline-widget-vue.js",
            "require": "./dist/baseline-widget-vue.umd.cjs"
        },
        "./dist/style.css": {
            "import": "./dist/style.css",
            "require": "./dist/style.css"
        }
    },
    "peerDependencies": {
        "vue": "^3.4.21"
    },
    "scripts": {
        "dev": "vite",
        "build": "run-p type-check \"build-only {@}\" --",
        "preview": "vite preview",
        "build-only": "vite build",
        "type-check": "vue-tsc --build --force",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "format": "prettier --write src/"
    },
    "dependencies": {
        "vue": "^3.4.21"
    },
    "devDependencies": {
        "@rushstack/eslint-patch": "^1.8.0",
        "@tsconfig/node20": "^20.1.4",
        "@types/node": "^20.12.5",
        "@types/vue": "^2.0.0",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vitejs/plugin-vue-jsx": "^3.1.0",
        "@vue/babel-plugin-jsx": "^1.2.2",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "@vue/tsconfig": "^0.5.1",
        "eslint": "^8.57.0",
        "eslint-plugin-vue": "^9.23.0",
        "less": "^4.2.0",
        "npm-run-all2": "^6.1.2",
        "prettier": "^3.2.5",
        "pug": "^3.0.3",
        "typescript": "~5.4.0",
        "vite": "^5.2.8",
        "vite-plugin-dts": "^3.9.1",
        "vue-tsc": "^2.0.11"
    }
}
